<!DOCTYPE html>
<html lang="en">
<head>
  <title><%= dbName %> Details</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body class="container mt-5">
  <h2>Database: <%= dbName %></h2>
  <form action="/database/<%= dbName %>/addTable" method="POST" class="my-4">
    <input type="text" name="tableName" class="form-control mb-2" placeholder="New Table Name" required>
    <button class="btn btn-primary">Add Table</button>
  </form>

  <h4>Tables:</h4>
  <table class="table table-striped">
    <thead><tr><th>Table Name</th></tr></thead>
    <tbody>
      <% tables.forEach(t => { %>
        <tr><td><%= Object.values(t)[0] %></td></tr>
      <% }) %>
    </tbody>
  </table>

  <a href="/databases" class="btn btn-secondary">Back</a>
</body>
</html>
